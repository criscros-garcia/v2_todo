<h1>
  <strong>List Name:</strong>
  <%= @list.name %>
  <%= link_to 'CSV', list_path(@list, format: 'csv'), class:'btn btn-primary' %>
  <%= link_to 'PDF', list_path(@list, format: 'pdf'), class:'btn btn-primary' %>
</h1>
<table class="table table-bordered">
  <thead>
    <tr>
      <th>Task Description</th>
      <th>Completed</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @list.tasks.each do |task| %>
      <% if task.completed %>
          <tr class="table-secondary">
            <td class="striker"><%= task.description %></td>
            <td><%= task.completed %></td>
            <td><%= link_to 'Edit', edit_list_task_path(@list, task) %></td>
            <td><%= link_to 'Destroy Task', [task.list, task],
            method: :delete,
            data: { confirm: 'Are you sure?'}
            %></td>
          </tr>
      <% else %>
          <tr>
            <td><%= task.description %></td>
            <td><%= task.completed %></td>
            <td><%= link_to 'Edit', edit_list_task_path(@list, task) %></td>
            <td><%= link_to 'Destroy Task', [task.list, task],
            method: :delete,
            data: { confirm: 'Are you sure?'}
            %></td>
          </tr>

      <% end %>
    <% end %>
  </tbody>
</table>


<h2>Add a Task:</h2>
