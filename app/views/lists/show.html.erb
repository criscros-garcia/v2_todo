<p id="notice"><%= notice %></p>

<!--<%= render @list.tasks %> -->
<p>
  <strong>List Name:</strong>
  <%= @list.name %>
</p>
<table>
  <thead>
    <tr>
      <th>Task Description</th>
      <th>Completed</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @list.tasks.each do |task| %>
      <tr>
        <td><%= task.description %></td>
        <td><%= task.completed %></td>
        <td><%= link_to 'Show', "#" %></td>
        <td><%= link_to 'Edit', "#" %></td>
        <td>  <%= link_to 'Destroy Task', [task.list, task],
        method: :delete,
        data: { confirm: 'Are you sure?'}
        %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<h2>Add a Task:</h2>
<%= render 'tasks/form' %>

<%= link_to 'Edit', edit_list_path(@list) %> |
<%= link_to 'Back', lists_path %>
