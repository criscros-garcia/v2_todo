
<div class="jumbotron">
  <h1>
    Lists
    <%= link_to 'CSV', lists_path(format: 'csv'), class:'btn btn-info' %>
    <%= link_to 'PDF', lists_path(format: 'pdf'), class:'btn btn-info' %>
  </h1>
</div>


<table class="table table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Completed</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lists.each do |list| %>
      <tr>
        <td><%= list.name %></td>
        <td><%= list.completed %></td>
        <td><%= link_to 'Show', list, class:"btn btn-primary btn-block" %></td>
        <td><%= link_to 'Edit', edit_list_path(list),class:"btn btn-success btn-block" %></td>
        <td><%= link_to 'Destroy', list, method: :delete,
          class:"btn btn-danger btn-block",
          data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New List', new_list_path, class:"btn btn-primary" %>
