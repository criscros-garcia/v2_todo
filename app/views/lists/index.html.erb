<p id="notice"><%= notice %></p>

<h1>
  Lists
  <%= link_to 'CSV', lists_path(format: 'csv'), class:'btn btn-primary' %>
  <%= link_to 'PDF', lists_path(format: 'pdf'), class:'btn btn-primary' %>
</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Completed</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lists.each do |list| %>
      <tr>
        <td><%= list.name %></td>
        <td><%= list.completed %></td>
        <td><%= link_to 'Show', list %></td>
        <td><%= link_to 'Edit', edit_list_path(list) %></td>
        <td><%= link_to 'Destroy', list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New List', new_list_path %>
