<div class="row">
  <div class="col-md-6 offset-md-3 text-center">
    <div class="card">
      <div class="card-body">
          <h1>Edit Task <%= @task.description %></h1>
          <%= form_with(model:[@list, @list.tasks.find(@task.id)], local: true) do |form| %>
            <div class="form-group">
              <%= form.label :description %>
              <%= form.text_field :description, class:"form-control" %>
            </div>

            <div class="form-group">
              <%= form.label :completed %>
              <%= form.check_box :completed, class:"form-control" %>
            </div>
            <div class="form-group">
              <%= form.submit 'Edit Task', class: 'btn btn-primary btn-block' %>
            </div>
          <% end %>
        </div>
    </div>
  </div>
</div>
